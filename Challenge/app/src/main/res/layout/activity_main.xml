<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bloodshot"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:text="Bloodshot"
            android:textStyle="bold"
            android:layout_alignStart="@+id/image"
            android:layout_alignBottom="@+id/image"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/synopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/synopsis"/>

        <TextView
            android:id="@+id/cast_crew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cast_crew"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/synopsis"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_below="@id/cast_crew"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cast"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_below="@id/director"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/director_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dave Wilson"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/director"
            android:layout_below="@+id/cast_crew"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/cast_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vin Diesel, Eiza Gonzalez, Sam Heughan, Tobby Kebbel"
            android:textSize="18sp"
            android:layout_alignStart="@+id/director_list"
            android:layout_below="@id/director_list"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Rent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>